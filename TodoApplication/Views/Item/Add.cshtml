@model TodoApplication.Models.ViewModels.TodoViewModel

<h1>Create Task</h1>
<form method="post" action="Add">
    <input asp-for="Todo.Id" type="hidden" id ="ID" class="form-control" />
    <div class="mb-3">
        <label class="form-label">Summary</label>
        <input type="text" class="form-control" id="summary" asp-for="Todo.Summary" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea class="form-control" id="description" asp-for="Todo.Description"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Status</label>
        <select class="form-control" id="status" asp-for="Todo.Status">
            <option value="To Do">To Do</option>
            <option value="In Progress">In Progress</option>
            <option value="Completed">Completed</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Assignee</label>
        <select class="form-control" id="assignee" asp-for="Todo.Assignee">
            <option value="Admin">Admin</option>
            <option value="Supervisor">Supervisor</option>
            <option value="Staff">Staff</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
